<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="sistoqjpa" transaction-type="RESOURCE_LOCAL">
		<provider>sistoqPU</provider>
		<class>br.com.maxmiller.entity.Cliente</class>
		<class>br.com.maxmiller.entity.FormaPagamento</class>
		<class>br.com.maxmiller.entity.Produto</class>
		<class>br.com.maxmiller.entity.Usuario</class>
		<class>br.com.maxmiller.entity.EntradaEstoque</class>
		<class>br.com.maxmiller.entity.Fornecedor</class>
		<class>br.com.maxmiller.entity.ItemVenda</class>
		<class>br.com.maxmiller.entity.MotivoEntradaEstoque</class>
		<class>br.com.maxmiller.entity.MotivoSaidaEstoque</class>
		<class>br.com.maxmiller.entity.SaidaEstoque</class>
		<class>br.com.maxmiller.entity.Venda</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistoq"/>
			<property name="javax.persistence.jdbc.user" value="max"/>
			<property name="javax.persistence.jdbc.password" value="123456"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
